<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codesch.afdolash.meetpoint.activity.MainActivity">

    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/kbv_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kbv_image1"/>

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/kbv_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kbv_image2"/>

    </ViewSwitcher>

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temukan event "
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kesukaanmu"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_1"
        android:gravity="center"
        android:layout_centerHorizontal="true"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dan bagikan "
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eventmu"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:layout_toRightOf="@id/linear_1"
        android:layout_below="@id/linear_1"
        android:layout_marginLeft="16dp"/>

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:layout_toLeftOf="@id/linear_1"
        android:layout_below="@id/linear_1"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_above="@id/linear_1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/meetpoint" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_facebook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/linear_1"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:cardBackgroundColor="@color/colorFacebook"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_facebook_white_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="MASUK DENGAN FACEBOOK"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_term"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebijakan Pengguna"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
